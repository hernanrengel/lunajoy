datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String?
  pictureUrl String?
  googleSub  String   @unique
  createdAt  DateTime @default(now())
  logs       Log[]
}

model Log {
  id           String   @id @default(cuid())
  userId       String
  date         DateTime @default(now())
  mood         Int?
  anxiety      Int?
  sleepHours   Float?
  sleepQuality Int?
  activityType String?
  activityMins Int?
  socialCount  Int?
  stress       Int?
  symptoms     String?
  notes        String?

  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
